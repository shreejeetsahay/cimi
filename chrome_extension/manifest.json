{
  "manifest_version": 3,
  "name": "ChatCards",
  "version": "0.1.0",
  "description": "Capture and bookmark AI chat highlights into a searchable knowledge base.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://*.chat.openai.com/*",
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://*.chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "ChatCards",
    "default_popup": "src/popup.html"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  }
}
